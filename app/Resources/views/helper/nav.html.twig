<ul id="dropdownLogin" class="dropdown-content">
    <li><a href="{{ path('profile') }}">Profile</a></li>
    <li><a href="{{ path('logout') }}">Logout</a></li>
</ul>
<nav class="green" role="navigation">
    <div class="nav-wrapper container"><a id="logo-container" href="{{ path('home') }}" class="brand-logo">obServer</a>
        <ul class="right hide-on-med-and-down">
            {% if is_granted('ROLE_USER') %}
                <li {% if "admin" == app.request.get('_route') %}class="active"{% endif %}><a href="{{ path('admin') }}">Admin</a></li>
                <li>
                    <a class="dropdown-button" href="#" data-activates="dropdownLogin">
                        <div class="chip green white-text">
                            <img src="{{ app.user.profilePicture }}">{{ app.user.username }}
                        </div>
                        <i class="material-icons right">arrow_drop_down</i>
                    </a>
                </li>
            {% else %}
                <li {% if "hwi_oauth_connect" == app.request.get('_route') %}class="active"{% endif %}><a href="{{ path('hwi_oauth_connect') }}">Login</a></li>
            {% endif %}
            <li><a href="#">Contact</a></li>
            <li><span class="blue-grey-text flow-text" id="clock">{{ "now"|date("G:i:s", "Europe/Paris") }}</span></li>
        </ul>

        <ul id="nav-mobile" class="side-nav">
            {% if is_granted('ROLE_USER') %}
                <li {% if "admin" == app.request.get('_route') %}class="active"{% endif %}><a href="{{ path('admin') }}">Admin</a></li>
                <li><a href="{{ path('profile') }}">Profile</a></li>
                <li><a href="{{ path('logout') }}">Logout</a></li>
            {% else %}
                <li {% if "hwi_oauth_connect" == app.request.get('_route') %}class="active"{% endif %}><a href="{{ path('hwi_oauth_connect') }}">Login</a></li>
            {% endif %}
            <li><a href="#">Contact</a></li>
        </ul>
        <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
    </div>
</nav>
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="flash-message hide">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
